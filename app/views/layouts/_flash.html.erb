<section class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">
      <% [:warning, :danger, :success, :info].each do |message_type| %>
        <% if flash[message_type].present? %>
          <div class="bs-component fade-out-automatically">
            <div class="alert alert-dismissible alert-<%= message_type %>">
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
              <p><%= flash[message_type] %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>